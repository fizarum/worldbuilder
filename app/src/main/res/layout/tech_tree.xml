<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tech Tree Category 1 -->
        <TextView
            android:id="@+id/category1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adaptation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tier 1 -->
        <com.worldbuilder.mapgame.ui.dialogs.TechTreeNodeView
            android:id="@+id/category1_tier1_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/category1_title"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tier 2 -->
        <com.worldbuilder.mapgame.ui.dialogs.TechTreeNodeView
            android:id="@+id/category1_tier2_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/category1_tier1_node"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Add more tiers for Category 1 -->

        <!-- Tech Tree Category 2 -->
        <TextView
            android:id="@+id/category2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/category1_title" />

        <!-- Add tiers for Category 2 -->

        <!-- Tech Tree Category 3 -->
        <TextView
            android:id="@+id/category3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category 3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/category2_title" />

        <!-- Add tiers for Category 3 -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>